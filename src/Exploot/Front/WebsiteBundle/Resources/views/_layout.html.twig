<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {% stylesheets  '@ExplootFrontWebsiteBundle/Resources/public/css/reset.min.css'
                        '@ExplootFrontWebsiteBundle/Resources/public/css/*' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
    <body>
        <!-- HEADER -->
        {{include('ExplootFrontWebsiteBundle::header.html.twig')}}

        <!-- VIEW -->
        <div id="container" class="container">
            {% block body %}{% endblock %}
        </div>

        <!-- FOOTER -->
        {{include('ExplootFrontWebsiteBundle::footer.html.twig')}}

        {% javascripts '@ExplootFrontWebsiteBundle/Resources/public/js/*' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>
